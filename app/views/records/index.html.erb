<div class="container">
  <h1>Registros</h1>

  <table class="table table-striped table-bordered table-condensed text-center">
    <thead>
      <tr>
        <th>Data</th>
        <th>Total KM</th>
        <th>Valor R$</th>
        <th>Pago?</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody id="corpo">
      <% @records.each do |record| %>
        <tr>
          <td><%= record.data %></td>
          <td><%= record.total_km %></td>
          <td><%= "R$ #{record.valor}" %></td>
          <td class="status"><%= record.status %></td>

          <td><%= link_to 'Edit', edit_record_path(record), class: "btn btn-default btn-sm" %></td>
          <!--
          <td><%= link_to 'Show', record, class: "btn btn-default btn-sm" %></td>
          <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm" %></td>
        -->
        </tr>
        <% end %>
      </tbody>
      <thead>
        <th colspan="2"></th>
        <th><%= "Total: R$ #{ Record.total }"%></th>
        <th colspan="1"></th>
      </thead>

    </table>
  <br>
  <%= link_to 'New Record', new_record_path, class: "btn btn-default" %>
</div>

<p id="notice"><%= notice %></p>
