<div class="container">
<%= simple_form_for(@record) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :data %>
    <%= f.input :total_km, label:  "Total KM" %>
    <!-- <%= f.input :valor %>  -->
    <%= f.input :status, :label => "Pago?", :value => false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
